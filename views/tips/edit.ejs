<h1>
    Edit Tip:
</h1>

<form method="post" action="/quizzes/<%= quiz.id %>/tips/<%=tip.id%>?_method=PUT" >

    <div class="wideRow">
        <label for="text"  class="itemNarrow">Tip a editar:</label>
        <input type="text" class="itemWide" id="text" name="text" value="<%= tip.text %>" placeholder="Tip" autocomplete="off"/>
    </div>

    <!--//tip.text lo llamo por como he definido el model del tip-->

    <br/>
    <a href="/goback"><button type="button">Cancel</button></a>

    <input type="submit" value="Save">
</form>
